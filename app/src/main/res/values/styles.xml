<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImageShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item> <!-- or 8dp, or whatever radius you like -->
    </style>

    <style name="ReactionIconStyle">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Widget.MyApp.Button.Segmented" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearance">@style/RoundedImageShape</item>
        <item name="strokeColor">@color/segmented_button_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/segmented_button_bg</item>
    </style>

    <style name="RightSideRoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>